#version 400

layout (points) in;
layout (triangle_strip, max_vertices = 4) out;

out vec2 texCoord;

uniform uniBall
{
	mat4 uniTrans;
	mat4 projView;
	vec3 eyePos;
	vec2 size;
};

void main()
{
	vec3 Pos = gl_in[0].gl_Position.xyz;
	
	vec3 toCamera = normalize(eyePos - Pos);
	vec3 up = vec3(0.0, 1.0, 0.0);
	vec3 right = cross(toCamera, up);
	
	Pos -= (right * 1);
    gl_Position = projView * vec4(Pos, 1.0);
    texCoord = vec2(0.0, 0.0);
    EmitVertex();

    Pos.y += 5.0;
    gl_Position = projView * vec4(Pos, 1.0);
    texCoord = vec2(0.0, 1.0);
    EmitVertex();

    Pos.y -= 5.0;
    Pos += right;
    gl_Position = projView * vec4(Pos, 1.0);
    texCoord = vec2(1.0, 0.0);
    EmitVertex();

    Pos.y += 5.0;
    gl_Position = projView * vec4(Pos, 1.0);
    texCoord = vec2(1.0, 1.0);
    EmitVertex();

    EndPrimitive();
}