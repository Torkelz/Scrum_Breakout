#include "Header/LinKeyboard.h"

Keyboard::Keyboard(GLFWwindow* p_pHwnd)
{
	m_pHwnd = p_pHwnd;
}

Keyboard::~Keyboard()
{
	m_pHwnd = NULL;
}

unsigned short Keyboard::KeyDown(unsigned short p_key)
{
	unsigned short ushort;

	switch(glfwGetKey(m_pHwnd, p_key))
	{
	case GLFW_KEY_W:
		ushort = 0x41;
		break;
	case GLFW_KEY_A:

		break;
	case GLFW_KEY_S:

		break;
	case GLFW_KEY_D:

		break;
	}

	return ushort;
}
