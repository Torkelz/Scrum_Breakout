#version 400
layout (triangles) in;
layout (triangle_strip, max_vertices = 9) out;

void main()
{
	for (int i = 0; i < 3; i++)
	{
		vec3 vPos = gl_in[i].gl_Position.xyz;
		EmitVertex();
		
		vPos = gl_in[(i+1)%3].gl_Position.xyz;
		EmitVertex();
		
		vPos = gl_in[(i+1)%3].gl_Position.xyz;
		EmitVertex();
		
		EndPrimitive();
	}
}