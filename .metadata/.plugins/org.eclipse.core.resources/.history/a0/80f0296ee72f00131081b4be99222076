#include "Header/LinHid.h"

LinHID::LinHID(GLFWwindow* p_pHwnd)
{
	m_pHwnd = p_pHwnd;

	m_mouse = NULL;
	m_keyboard = NULL;

	m_mouse		= LinMouse(p_pHwnd);
	m_keyboard 	= LinKeyboard(p_pHwnd);
}

LinHID::~LinHID()
{
	m_mouse.~LinMouse();
	m_mouse = NULL;
	m_keyboard.~LinKeyboard();
	m_keyboard = NULL;
}

void LinHID::update(int p_action)
{
	switch(p_action)
	{
	case GLFW_PRESS:

		break;
	}
}
