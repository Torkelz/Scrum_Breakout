#version 400
layout (points) in;
layout (triangle_strip) out;
layout (max_vertices = 4) out;

out vec2 texCoord;

void main()
{
	vec3 Pos = gl_in[0].gl_Position.xyz;
	  
    gl_Position = vec4(-1.0, -1.0, 0.0, 1.0);
    EmitVertex();

    gl_Position = vec4(1.0, -1.0, 0.0, 1.0);
    EmitVertex();

    Pos += right;
    gl_Position = vec4(-1.0, 1.0, 0.0, 1.0);
    EmitVertex();

    gl_Position = vec4(1.0, 1.0, 0.0, 1.0);
    EmitVertex();

    EndPrimitive();
}